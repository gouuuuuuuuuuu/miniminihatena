<h3>過去の投稿 (全<%= @posts.size%>件)</h3>
<%#= link_to '会員詳細に戻る', admin_customer_path(@customer.id), class: "btn btn-success" %>
<%#= @posts.customer.last_name + @posts.customer.first_name %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>いいね</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |postss| %>
    <tr>
      <td>
         <%= link_to admin_post_path(postss.id) do %>
          <%= postss.title.truncate(25) %>
          <% end %>
      </td>
      <td>
        <%= link_to admin_post_path(postss.id) do %>
        <%= postss.body.truncate(25) %>
         <% end %>
      </td>
      <td>
        <%= postss.liked_customers.count %> いいね
      </td>
    </tr>
    <% end %>
    </tbody>
</table>
</div>
</div>
</div>


