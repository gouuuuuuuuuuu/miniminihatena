
<div class="col-md-6 article-box">
  <div class="row mt-3">
    <div class="col-md-8">
      <div class="article-body">
        <p class="article-title-name">
          <%= link_to news.url do %>
          <%= news.title.truncate(100) %>
          <% end %>
        </p>
      </div>
    </div>
    <div class="col-md-4">
    <%= link_to news.url do %>
      <% if news.urlToImage.present? %>
        <%= image_tag(news.urlToImage, class: "item-img", style: "width:100px; height:100px; object-fit: cover;") %>
      <% else %>
        <%= image_tag("no_image.jpg", class: "item-img") %>
      <% end %>
    <% end %>
    </div>
  </div>
    <!--
    <div class="tags">
      <div class="article-body">
      </div>
    </div>
    -->
</div>