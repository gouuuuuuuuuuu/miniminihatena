<div class="container">

<%= form_with model: @customer, url:public_customer_path, method: :PATCH do |f| %>

<div class="row">
<h2 class="col-md-12">会員情報編集</h2>

<div class="col-md-4">
氏名
</div>
<div class="col-md-8 mb-4"><%= f.text_field :last_name %> <%= f.text_field :first_name %>
</div>

<div class="col-md-4">
フリガナ
</div>
<div class="col-md-8 mb-4"><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
</div>

<div class="col-md-4">
郵便番号
</div>
<div class="col-md-8 mb-4"><%= f.text_field :postal_code %>
</div>

<div class="col-md-4">
住所
</div>
<div class="col-md-8 mb-4"><%= f.text_field :address,class: "form-control" %>
</div>

<div class="col-md-4">
電話番号
</div>
<div class="col-md-8 mb-4"><%= f.text_field :telephone_number %>
</div>

<div class="col-md-4">
メールアドレス
</div>
<div class="col-md-8 mb-4"><%= f.text_field :email %>
</div>

<div class="col-md-4">
<%= f.submit '編集内容を保存', class: "btn btn-success" %>
</div>

<div class="col-md-4">
<%= link_to '退会する', public_customer_path, class: "btn btn-danger" %>
</div>

<% end %>
</div>
</div>