<h8>検索結果</h8>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがPostの時 -->
  <% if @range == "Post" %>
    <tbody>
      <!--each文がpostになってると赤い文になるのが気持ち悪いのでpostss-->
      <% @posts.each do |postss| %>
        <tr>
          <td><%= postss.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.title %></td>
          <td><%= genre.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
